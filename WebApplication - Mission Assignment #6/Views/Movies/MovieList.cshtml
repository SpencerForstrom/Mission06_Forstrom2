@model List<WebApplication___Mission_Assignment__6.Models.Movie>

<h2 class="text-center">Movie List</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Year</th>
            <th>Director</th>
            <th>Rating</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Year</td>
                <td>@movie.Director</td>
                <td>@movie.Rating</td>
            </tr>
        }
    </tbody>
</table>
